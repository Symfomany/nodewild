html
  head
    title BackOffice - #{title}
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    block css
      link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
      link(rel="stylesheet", href="https://bootswatch.com/flatly/bootstrap.min.css")
      link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.5.0/summernote.css")
      link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.5.0/summernote-bs3.css")
      link(rel="stylesheet", href="css/main.css")

      
  body
    block header
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          |  
          a.navbar-brand(href='#') Hovta
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='#') <i class="fa fa-home"></i> Accueil
            li
              a(href='#about') Pages
            li
              a(href='#contact') Contact
          if user
            div.navbar-right
              ul.nav.navbar-nav
                li
                  a(href="/logout") Se Deconnecter (#{user.username})
    div.container(style="padding-top: 70px" id="app")
      if expressFlash && expressFlash.length > 0
        .alert.alert-info.fade.in.alert-dismissable
          a.close(href='#', data-dismiss='alert', aria-label='close', title='close') &times;
          |  
          strong Info!
          |  #{expressFlash}

      block content

    block footer
    block scripts
      script(src='https://code.jquery.com/jquery-3.2.1.min.js')
      script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/summernote/0.5.0/summernote.min.js')
      //- script(src='https://cdnjs.cloudflare.com/ajax/libs/vue/2.2.6/vue.js')
      script(src="js/main.js")